<h1>Disasters Information</h1>
<div class="row">
  <div class="col-sm-12">
    <div class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2">Title:</label>
        <div class="col-sm-10">
          <label><%= @disaster.title %></label><br>
          <label>
            <small>Date Created:<%= time_ago_in_words(@disaster.created_at) %> ago</small>
          </label>
          <label>
            <small>Date Last Update:<%= time_ago_in_words(@disaster.created_at) %> ago</small>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">Category:</label>
        <div class="col-sm-10">
          <p><%= @disaster.category.category_name %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">Description:</label>
        <div class="col-sm-10">
          <p><%= @disaster.description %></p>
        </div>
      </div>
    </div>
    <hr>
    <% if author? %>
      <div class="pull-right">
        <%= link_to "Edit Disaster", edit_disaster_path(@disaster.id), class: "btn btn-primary" %>
        <%= link_to "Delete", disaster_path(@disaster),
                    method: :delete,
                    data:{confirm: "Are you sure to delete?"},
                    class: "btn btn-danger" %>
        <%= link_to "Back", disasters_path, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: "comments/commentpartial" %>
<hr>
<%= render partial: "comments/show" %>